                <Standard.DialogCloseButtons VisualDefinition="BottomMenu" Parameter.DoneButtonAction="OnCloseMenu" PositionYOffset="100" Parameter.DoneButtonText="Leave" Parameter.ShowCancel="false" />
            </Children>
        </Widget>
