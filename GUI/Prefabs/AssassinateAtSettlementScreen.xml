                                                                        <TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" HorizontalAlignment="Center" Brush="CenterAlignedSmallFont" VerticalAlignment="Bottom" Text="Sneak in" />
                                                                    </Children>
