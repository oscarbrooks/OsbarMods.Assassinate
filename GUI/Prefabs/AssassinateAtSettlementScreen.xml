                        <TextWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" HorizontalAlignment="Left" VerticalAlignment="Top" MarginLeft="210" MarginTop="430" Text="@SneakInPercentageText" />
                    </Children>
